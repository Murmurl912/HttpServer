<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/root_navigation"
            app:startDestination="@id/nav_server">
    <fragment android:id="@+id/nav_server" android:name="com.example.httpserver.app.ui.view.server.ServerFragment"
              android:label="@string/server" tools:layout="@layout/fragment_server">
        <action android:id="@+id/action_nav_server_to_nav_basic_authen"
                app:destination="@id/nav_auth"/>
        <action android:id="@+id/action_nav_server_to_nav_http_server_config"
                app:destination="@id/nav_http_server_config"/>
        <action android:id="@+id/action_nav_server_to_nav_qr_code" app:destination="@id/nav_qr_code"/>
    </fragment>
    <fragment android:id="@+id/nav_folders" android:name="com.example.httpserver.app.ui.view.folders.FoldersFragment"
              android:label="@string/directories" tools:layout="@layout/fragment_folders">
        <action android:id="@+id/action_nav_folders_to_nav_folder"
                app:destination="@id/nav_folder"/>
    </fragment>
    <fragment android:id="@+id/nav_folder"
              android:name="com.example.httpserver.app.ui.view.folders.folder.FolderFragment"
              android:label="@string/directory"
              tools:layout="@layout/fragment_folder">
        <action android:id="@+id/action_nav_folder_to_editTextDialog"
                app:destination="@id/nav_context_editor"/>
        <action android:id="@+id/action_nav_folder_to_nav_path_chooser"
                app:destination="@id/nav_path_chooser"/>
        <action android:id="@+id/action_nav_folder_to_nav_folders"
                app:popUpToInclusive="true"
                app:popUpTo="@id/nav_folders"/>
    </fragment>
    <dialog android:id="@+id/nav_context_editor"
            android:name="com.example.httpserver.app.ui.view.folders.folder.ContextDialog"
            android:label="@string/context"
            tools:layout="@layout/dialog_edit_text">
        <action android:id="@+id/action_nav_context_editor_to_nav_folder"
                app:popUpTo="@id/nav_folder"/>
    </dialog>
    <dialog android:id="@+id/nav_path_chooser"
            android:name="com.example.httpserver.app.ui.view.folders.folder.PathChooseDialog"
            android:label="@string/path"
            tools:layout="@layout/dialog_edit_text">
        <action android:id="@+id/action_nav_path_chooser_to_nav_folder"
                app:popUpTo="@id/nav_folder"/>
    </dialog>
    <dialog android:id="@+id/nav_auth"
              android:name="com.example.httpserver.app.ui.view.server.WebSecurityDialog"
              android:label="@string/security">
        <action android:id="@+id/action_nav_basic_authen_to_nav_server"
                app:popUpTo="@id/nav_server"/>
    </dialog>
    <dialog android:id="@+id/nav_http_server_config" android:name="com.example.httpserver.app.ui.view.server.WebServerDialog"
            android:label="@string/server_config">
        <action android:id="@+id/action_nav_http_server_config_to_nav_server"
                app:popUpTo="@id/nav_server"/>
    </dialog>
    <dialog android:id="@+id/nav_qr_code" android:name="com.example.httpserver.app.ui.view.server.QRCodeDialog"
              android:label="QRCodeDialog">
        <action android:id="@+id/action_nav_qr_code_to_nav_server"
                app:popUpTo="@id/nav_server"/>
    </dialog>
</navigation>
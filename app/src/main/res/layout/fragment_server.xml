<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".app.ui.view.server.ServerFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:focusable="true">
        <androidx.cardview.widget.CardView
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">
            <LinearLayout
                    android:focusable="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:minWidth="48dp"
                              android:minHeight="48dp"
                              android:focusable="true">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Port"
                              android:focusable="true"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:gravity="center_vertical"
                              android:textIsSelectable="true"
                              android:text="8080"
                              android:background="#ffffff"
                              android:focusable="true"
                              android:id="@+id/port"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:minWidth="48dp"
                              android:minHeight="48dp"
                              android:focusable="true">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Address"
                              android:focusable="true"/>
                    <Spinner  android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:gravity="center_vertical"
                              android:focusable="true"
                              android:id="@+id/address"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:minWidth="48dp"
                              android:minHeight="48dp"
                              android:focusable="true">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Server Status"
                              android:focusable="true"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:gravity="center_vertical"
                              android:textIsSelectable="true"
                              android:text="Stopped"
                              android:focusable="true"
                              android:id="@+id/status"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                />
                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="Start Server"
                        android:focusable="true"
                        android:id="@+id/server_action"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true">
                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:minWidth="48dp"
                        android:padding="@dimen/text_padding"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                        android:text="Enable Basic Authentication"
                        android:id="@+id/basic"
                        android:focusable="true"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:minWidth="48dp"
                              android:minHeight="48dp"
                              android:focusable="true">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Username"
                              android:focusable="true"/>
                    <TextView  android:layout_width="0dp"
                               android:focusable="true"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:padding="@dimen/text_padding"
                               android:textIsSelectable="true"
                               android:gravity="center_vertical"
                               android:id="@+id/username"/>
                </LinearLayout>
                <LinearLayout
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:minWidth="48dp"
                        android:minHeight="48dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Password"
                              android:focusable="true"/>
                    <EditText  android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:textIsSelectable="true"
                               android:inputType="textPassword"
                               android:gravity="center_vertical"
                               android:padding="@dimen/text_padding"
                               android:background="#ffffff"
                               android:focusable="true"
                               android:editable="false"
                               android:id="@+id/password"/>
                </LinearLayout>
                <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                />
                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:minWidth="48dp"
                        android:padding="@dimen/text_padding"
                        android:focusable="true"
                        android:text="Enable TOTP"
                        android:id="@+id/totp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:minWidth="48dp"
                              android:minHeight="48dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Key"
                              android:focusable="true"/>
                    <Spinner android:layout_width="0dp"
                             android:padding="@dimen/text_padding"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:focusable="true"
                             android:id="@+id/totp_key"/>
                </LinearLayout>
                <LinearLayout
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:focusable="true"
                            android:textIsSelectable="true"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/totp_password"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>
                    <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:id="@+id/totp_progress"
                            android:focusable="true"/>
                </LinearLayout>

                <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                />
                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:minWidth="48dp"
                        android:padding="@dimen/text_padding"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                        android:text="Enable TLS"
                        android:id="@+id/tls"
                        android:focusable="true"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:minWidth="48dp"
                              android:minHeight="48dp"
                              android:focusable="true">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:padding="@dimen/text_padding"
                              android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                              android:text="Cert"
                              android:focusable="true"/>
                    <Spinner android:layout_width="0dp"
                             android:padding="@dimen/text_padding"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:focusable="true"
                             android:id="@+id/tls_cert"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
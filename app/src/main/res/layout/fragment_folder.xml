<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            tools:context=".app.ui.view.folders.folder.FolderFragment">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_folder"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/path_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="Folder"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/path_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/path"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="@string/path"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/path_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/path"
                          android:layout_alignStart="@id/path"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="@string/path_to_be_sharing"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/context_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/path_label"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="Context"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/laebl_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/path_label"
                          android:layout_alignStart="@id/path_label"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="Context of this path, a name for shared folder"/>

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lock"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/access_control"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="@string/access_control"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/enable_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="Share"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/share_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/enable_title"
                          android:layout_alignStart="@id/enable_title"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="Enable sharing on this folder"/>

            </RelativeLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/read_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="@string/read"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/read_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/read_title"
                          android:layout_alignStart="@id/read_title"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="@string/allow_read_to_this_folder"/>

            </RelativeLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/write_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="@string/write"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/write_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/write_title"
                          android:layout_alignStart="@id/write_title"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="@string/allow_write_to_this_folder"/>

            </RelativeLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/subfolder_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="Apply"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/subfolder_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/subfolder_title"
                          android:layout_alignStart="@id/subfolder_title"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="@string/apply_permission_to_subfolder"/>

            </RelativeLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/subfolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/more"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="@string/more"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:paddingStart="?attr/listPreferredItemPaddingStart"
                android:paddingEnd="?attr/listPreferredItemPaddingEnd"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="58dip"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dip"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dip"
                    android:paddingBottom="16dip">

                <TextView android:id="@+id/delete_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:text="Delete"
                          android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView android:id="@+id/delte_summary"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/delete_title"
                          android:layout_alignStart="@id/delete_title"
                          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                          android:textColor="?android:attr/textColorSecondary"
                          android:maxLines="10"
                          android:text="Delete this entry"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
